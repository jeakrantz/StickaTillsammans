@model StickaTillsammans.Models.Course

@{
    ViewData["Title"] = "Boka Workshop";
}
<div class="container">

    <div class="workshop">
        <dl class="row">
            <div class="col-sm-8">
                <dd class="col-sm-10">
                    <img class="img-fluid" src="/images/@Html.DisplayFor(model => model.ImageName)">
                </dd>
            </div>
            <div class="col-sm-4">
                <h2>@Html.DisplayFor(model => model.Title)</h2>
                <p>
                @Html.DisplayFor(model => model.Date)
                @Html.DisplayFor(model => model.Time)
                </p>
                <div class="row price">
                    @Html.DisplayFor(model => model.Price) SEK
                    @{
                        var i = 0;
                        foreach (var p in Model.Participants)
                        {
                            i = i + Convert.ToInt32(@p.Spots);
                        }

                        var r = Model.Spots - i;

                        if (r <= 0)
                        {
                            <div class="remaining-spots filled">
                                Fullsatt
                            </div>
                        }
                        else
                        {
                            <div class="remaining-spots">
                                @r kvar
                            </div>
                            <a asp-controller="Participant" asp-action="Create">Boka plats  <i class="fa-solid fa-arrow-right"></i></a>
                        }
                    }
                </div>
                <h3>@Html.DisplayNameFor(model => model.Description)</h3>
                <p>@Html.DisplayFor(model => model.Description)</p>
            </div>
        </dl>
    </div>
</div>
