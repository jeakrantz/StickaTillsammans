@model StickaTillsammans.Models.Post

@{
    ViewData["Title"] = "Inl√§ggsdetaljer";
}
<div class="container">
<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="row">
        <div class="row col-sm-6">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        </div>
        <div class="row col-sm-6">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName):
        </dt>
        <dd class="col-sm-10">
            <img class="img-fluid" src="/images/@Html.DisplayFor(model => model.ImageName)">
        </dd>
        </div>
    </dl>
</div>
    <div>
        <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Tillbaka till listan</a> | 
        <a asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa-solid fa-pen"></i> Redigera</a>
    </div>
</div>
